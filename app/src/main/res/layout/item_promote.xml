<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingBottom="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/light_gray_rect"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/i1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_like_heart_outline"/>

            <customfonts.MyTextView_sfuitext_regular
                android:id="@+id/txtoffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25%"
                android:layout_marginTop="30dp"
                android:textColor="#ffffff"
                android:background="@drawable/rect2"
                android:padding="4dp"/>

            <ImageView
                android:id="@+id/i2"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="18dp"
                android:src="@drawable/shoes3"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <customfonts.MyTextView_sfuitext_regular
                android:id="@+id/txtprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$120"
                android:textSize="14sp"
                android:textColor="#ef4e33" />

            <customfonts.MyTextView_sfuitext_regular
                android:id="@+id/txtcutprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cutprice"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <customfonts.MyTextView_sfuitext_regular
            android:id="@+id/txtshoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ninja high top\nsneackers"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"/>
    </LinearLayout>



</LinearLayout>